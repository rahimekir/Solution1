@model ProductModel

<h1 class="h3">Edit Product</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="EditProduct" method="POST">
            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="Price" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                </div>
            </div>
            <div class="form-group ">
                <div>
                    <button type="submit" class="btn btn-primary mt-4">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>@*
