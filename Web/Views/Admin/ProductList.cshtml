
@model ProductListViewModel



<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr />
        <a href="/admin/products/create" class="btn btn-primary btn-sm">Add Product</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style=" width:30px;">Id</td>
                    <td style=" width: 100px;">Image</td>
                    <td>Name</td>
                    <td style=" width:30px;">Price</td>
                    <td style=" width: 150px;">Ana Sayfa</td>
                    <td style=" width: 150px;">Onaylı</td>
                    <td style=" width: 150px;"></td>



                </tr>

            </thead>
    <tbody>
        @if (Model.Products.Count() > 0)
        {
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td><img src="~/img/@item.ImageUrl" width="80" /></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        @if (item.IsHome)
                        {
                            <i class="fas fa-check-circle"></i>
                        }
                        else
                        {
                            <i class="fas fa-times-circle"></i>
                        }
                    </td>
                    <td>
                        @if (item.IsApproved)
                        {
                            <i class="fas fa-check-circle"></i>
                        }
                        else
                        {
                            <i class="fas fa-times-circle"></i>
                        }
                    </td>
                    <td>
                        <a href="/admin/products/@item.ProductId" class="btn btn-primary" btn-sm mr-2>Edit</a>
                        <form action="/admin/deleteproduct" method="post" style="display:inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" href="#" class="btn btn-danger" btn-sm mr-2>Delete</button>
                        </form>

                    </td>
                </tr>
            }
        }
        else
                {
                    <div class="alert alert-warning">
                        <h3>Ürün yok</h3>
                    </div>
                }

            </tbody>

        </table>
    </div>
</div>